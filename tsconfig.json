{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "node_modules/@0xproject/typescript-typings/types"
      ]
    },
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "dist",
    "./node_modules/web3-typescript-typings/index.d.ts"
  ]
}
